<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <!-- 品牌 LOGO -->
      <a class="navbar-brand" href="/">回到主頁</a>

      <!-- 手機選單按鈕 -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- 導覽選單 -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/monthly-recipes">每月料理</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/chefs">團員介紹</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/trpg-records">TRPG跑團記錄</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/games">遊戲專區</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/kitchen-universe">廚房宇宙</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">聯絡我們</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const currentPath = window.location.pathname;
    document.querySelectorAll(".nav-link").forEach((link) => {
      if (link.getAttribute("href") === currentPath) {
        link.classList.add("active");
      }
    });
  });
</script>
