---
import Layout from "../layouts/Layout.astro";

import PlayBackList from "../components/pages/trpg-records/PlayBackList.astro";
---

<Layout title="TRPG Records" showFooter={false}>
  <img class="subpageBanner" src="/trpgBanner.png" />
  <div class="trpgCont">
    <div class="trpg-des-wrap">
      <img class="trpgSlogan" src="/trpgSlogan.png" />
      <div class="trpgWrap">
        <img class="videoThumbnail" src="/coc-video-thumbnail.png" />
        <a href="https://www.youtube.com/watch?v=hT4TulaozrA" target="_blank"
        ><img class="playButton" src="/play-video.png" /></a>
        <img class="otherPlaybacks" src="/other-playbacks.png" />
        <div class="playbackCont">
          <a href="https://www.youtube.com/watch?v=KvR7RDmddIo&t=1s" target="_blank">
          <img src="/trpg-playback1.webp" /> 
          <p class="vidTitle">誰是沼澤人？ EP.0</p>
          </a>
          <a href="https://www.youtube.com/watch?v=hT4TulaozrA" target="_blank">
          <img src="/trpg-playback2.webp" /> 
          <p class="vidTitle">誰是沼澤人？ EP.1</p>
          </a>
        </div>
      </div> 
    </div>
  </div>
<img id="backToTopBtn" class="back-to-top-btn" title="Go to top" src="/back-to-top-btn.png"/>
</Layout>

