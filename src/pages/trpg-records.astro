---
import Layout from "../layouts/Layout.astro";

import PlayBackList from "../components/pages/trpg-records/PlayBackList.astro";
---

<Layout>
  <img class="subpageBanner" src="/trpgBanner.png" />
  <div class="pageCont">
    <div class="trpg-des-wrap">
      <img class="trpgSlogan" src="/trpgSlogan.png" />
    </div>
    <div class="trpgWrap">
      <img class="trpgName" src="/coc-series-banner.png" />
      <img class="videoThumbnail" src="/coc-video-thumbnail.png" />
      <img class="lastestEp" src="/latest-ep.png" />
      <a href="https://www.youtube.com/watch?v=hT4TulaozrA" target="_blank"
        ><img class="playButton" src="/play-video.png" /></a
      >
    </div>

    <PlayBackList />
  </div>
</Layout>

<style>
  /*跑團即心結圖片區塊*/
  .trpg-des-wrap {
    width: 40%;
    height: auto;
    float: left;
    padding: 3%;
  }

  /*跑團即心結圖片介紹*/
  .trpgSlogan {
    width: 80%;
    margin-left: 5%;
    opacity: 0;
    animation: fadeInUp 0.5s;
    animation-fill-mode: forwards;
  }

  /*回放區塊*/
  .trpgWrap {
    width: 50%;
    height: 70vh;
    float: left;
  }

  /*系統及劇本名稱*/
  .trpgName {
    width: 60%;
    height: auto;
    align-self: center;
    margin: 5% 0 0 5%;
    opacity: 0;
    animation: fadeInLeft 1s;
    animation-fill-mode: forwards;
  }

  /*回放影片縮圖*/
  .videoThumbnail {
    width: 60%;
    margin: 5% 5% 0 10%;
    opacity: 0;
    animation: fadeInLeft 1s;
    animation-fill-mode: forwards;
    animation-delay: 0.5s;
  }

  /*最新集數*/
  .lastestEp {
    width: 65%;
    margin: 5% 5% 0 10%;
    position: relative;
    opacity: 0;
    animation: fadeInLeft 1s;
    animation-fill-mode: forwards;
    animation-delay: 1s;
  }

  /*開始播放按鈕*/
  .playButton {
    width: 20%;
    margin: 5% 0 10% -10%;
    position: absolute;
    opacity: 0;
    animation: fadeInLeft 1s;
    animation-fill-mode: forwards;
    animation-delay: 1s;
  }

  .playButton:hover {
    transition: transform 1s ease;
    transform: scale(1.2);
  }
</style>
