          <p class="toBeUploaded">{t('test')}</p>
        </div>
      </div>

      <div class="gameReplayBox">
        <img class="replayBanner" src="/games-immersive-eng.png" />
        <div class="gamesReplayCont">
          <a class="upload-box" href="https://youtu.be/tGQTowlLm6A">
            <img src="/daitsu-repo.jpg">
            <p>Daitsu Repo Single</p>
